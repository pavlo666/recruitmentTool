<section>
    <h3>Add new candidate</h3>
    <form role="form" class="ng-pristine ng-valid" ng-controller="CandidatesAddController as panel">
        <fieldset>
            <div class="form-group">
                <label>Firstname</label>
                <input type="text" class="form-control" name="first_name" placeholder="Firstname" ng-model="panel.data.first_name">
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Secondname</label>
                <input type="text" class="form-control" name="second_name" placeholder="Secondname" ng-model="panel.data.second_name">
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Lastname</label>
                <input type="text" class="form-control" name="last_name" placeholder="Lastname" ng-model="panel.data.last_name">
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Expect Salary</label>
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input type="text" class="form-control" name="expect_salary" placeholder="Expect salary" ng-model="panel.data.expect_salary">
                </div>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Current position</label>
                <select class="form-control" name="current_position" ng-model="panel.data.current_position">
                    <option>DEV</option>
                    <option>QI</option>
                </select>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Location</label>
                <input type="text" class="form-control" name="location" placeholder="Location"  ng-model="panel.data.location">
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Ready to join</label>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <input type="text" class="form-control" placeholder="Date" ng-model="panel.data.ready_to_join.time">
                        </div>
                        <div class="col-md-2 col-sm-4">
                            <select class="form-control" name="current_position" ng-model="panel.data.ready_to_join.time_type">
                                <option value="week(s)">Week</option>
                                <option value="day(s)">Day</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Career start date</label>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-2 col-sm-4">
                            <input type="text" class="form-control" placeholder="month" ng-model="panel.data.current_start_date.month">
                        </div>
                        <div class="col-md-2 col-sm-4">
                            <input type="text" class="form-control" placeholder="year" ng-model="panel.data.current_start_date.year">
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>No IT experience</label>
                <div class="checkbox c-checkbox needsclick">
                    <label class="needsclick">
                        <input type="checkbox" class="needsclick" value="1" ng-model="panel.data.no_it_experience">
                        <span class="fa fa-check"></span>
                    </label>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Summery</label>
                <textarea class="form-control" name="summery" ng-model="panel.data.summery"></textarea>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label>Skills</label>
                <input type="text" class="form-control" name="skills[]" placeholder="Skills" ng-model="panel.data.skills">
            </div>
        </fieldset>

        <input type="hidden" name="cid" value="ng-model="panel.data.id">
        <button class="btn btn-lg btn-default" ng-click="panel.onClickEdit()">Add</button>
        <a class="btn btn-lg btn-default" href="#/candidates">Back</a>
    </form>

</section>