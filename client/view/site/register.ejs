<div class="wrapper ng-scope full-screen-page" data-autoscroll="false" data-ui-view=""><!-- uiView:  -->
    <div class="ng-zoomBackDown ng-fluid ng-scope" autoscroll="false" ui-view="">
        <div class="block-center mt-xl wd-xl ng-scope" ng-controller="RegisterController as register">
            <!-- START panel-->
            <div class="panel panel-dark panel-flat">
                <div class="panel-heading text-center">
                    <a href="#">
                        REGISTRATION
                    </a>
                </div>
                <div class="panel-body">
                    <form class="form-validate mb-lg ng-pristine" novalidate="" name="login.loginForm()" ng-submit="register.onClickRegister()" role="form">
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control ng-pristine ng-untouched" required="" ng-model="data.username" placeholder="Username" name="account_email">
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control ng-pristine ng-untouched" required="" ng-model="data.login" placeholder="Login" name="account_email">
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control ng-pristine ng-untouched" required="" ng-model="data.password" placeholder="Password" name="account_password">
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control ng-pristine ng-untouched" required="" ng-model="data.password_repeat" placeholder="Password repeat" name="account_password_repeat">
                        </div>

                        <input type="submit" class="btn btn-block btn-primary mt-lg" value="Register">
                    </form>
                    <div class="alert alert-danger text-center ng-binding ng-hide" ng-show="login.authMsg"></div>
                </div>
            </div>
        </div>
    </div>
</div>