<div class="wrapper ng-scope full-screen-page" data-autoscroll="false" data-ui-view=""><!-- uiView:  -->
    <div class="ng-zoomBackDown ng-fluid ng-scope" autoscroll="false" ui-view="">
        <div class="block-center mt-xl wd-xl ng-scope" ng-controller="LoginController as login">
            <!-- START panel-->
            <div class="panel panel-dark panel-flat">
                <div class="panel-heading text-center">
                    <a href="#">
                        SIGN IN TO CONTINUE.
                    </a>
                </div>
                <div class="panel-body">
                    <form class="form-validate mb-lg ng-pristine" novalidate=""name="login.loginForm()" ng-submit="login.onClickLogin()" role="form">
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control ng-pristine ng-untouched" required="" ng-model="data.account.login" placeholder="Login" name="account_email">
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control ng-pristine ng-untouched" required="" ng-model="data.account.password" placeholder="Password" name="account_password">
                        </div>

                        <input type="submit" class="btn btn-block btn-primary mt-lg" value="Login">
                    </form>
                    <div class="alert alert-danger text-center ng-binding ng-hide" ng-show="login.authMsg"></div>
                    <p class="pt-lg text-center">Need to Signup?</p>
                    <a class="btn btn-block btn-default" ui-sref="page.register" href="#/register">Register Now</a>
                </div>
            </div>
        </div>
    </div>
</div>